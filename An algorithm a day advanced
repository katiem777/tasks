num = int(input("Enter a number: "))
if num == 0:
    print(num, " represents Monday")
elif num == 1:
    print(num, " represents Tuesday")
elif num == 2:
    print(num, " represents Wednesday")
elif num == 3:
    print(num, " represents Thursday")
elif num == 4:
    print(num, " represents Friday")
else:
    print("ERROR, NOT A WEEKDAY")
